<Window x:Class="Solomon_Client.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Solomon_Client.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="Solomon_Client" Height="1000" Width="1600">
    
    <Grid>
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            <Image Source="/Assets/SplashScreen/SplashScreenImage.jpg"
                   Width="400"/>
            <Label Content="Solomon" 
                   FontSize="50"
                   HorizontalAlignment="Center"
                   FontWeight="ExtraLight"/>
        </StackPanel>
    </Grid>
</Window>
